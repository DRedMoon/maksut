<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1) Ylin palkki (teema #294D73) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#294D73"
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Settings-ikoni -->
        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_settings_white_24dp"
            app:tint="#FFFFFF"
            android:contentDescription="@string/settings" />

        <!-- Väli -->
        <View
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <!-- Sovelluksen nimi -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center" />

        <!-- Hamburger-valikko -->
        <ImageView
            android:id="@+id/iv_hamburger"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu_white_24dp"
            app:tint="#FFFFFF"
            android:contentDescription="@string/menu" />
    </LinearLayout>

    <!-- 2) “Jäljellä”-palkki (teema #192E45) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#192E45"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="TextSizeCheck">

        <TextView
            android:id="@+id/tv_remaining_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remaining"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_remaining_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/zero_euro"
            android:textColor="#FFFFFF"
            android:textSize="32sp" />

        <!-- 2b) Sivunäyttö-indikaattori: 3 ympyrää -->
        <LinearLayout
            android:id="@+id/ll_page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Piste 1 -->
            <ImageView
                android:id="@+id/iv_dot1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="4dp"
                android:contentDescription="@null"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_dot_filled"
                app:tint="#FFFFFF" />

            <!-- Piste 2 -->
            <ImageView
                android:id="@+id/iv_dot2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="4dp"
                android:contentDescription="@null"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_dot_outline"
                app:tint="#FFFFFF" />

            <!-- Piste 3 -->
            <ImageView
                android:id="@+id/iv_dot3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="4dp"
                android:contentDescription="@null"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_dot_outline"
                app:tint="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <!-- 3) Tapahtumat-lista (teema #192E45 tausta) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_transactions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#192E45"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>

    <!-- 4) Toimintonapit -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_add_salary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_salary" />

        <View
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_add_expense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_expense" />

    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/brand_primary"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Name and Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_loan_credit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loan/Credit Name"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_loan_credit_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loan"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:alpha="0.7" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_loan_credit_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="€10,000.00"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Progress Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/repayment_progress"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:alpha="0.7" />

                <TextView
                    android:id="@+id/tv_progress_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65%"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/pb_repayment_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="65"
                android:progressTint="@android:color/white"
                android:progressBackgroundTint="@android:color/white"
                android:progressBackgroundTintMode="multiply"
                android:alpha="0.3" />

        </LinearLayout>

        <!-- Details Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1: Remaining Balance and Monthly Payment -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/remaining_balance"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:alpha="0.7" />

                    <TextView
                        android:id="@+id/tv_remaining_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="€3,500.00"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/monthly_payment"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:alpha="0.7" />

                    <TextView
                        android:id="@+id/tv_monthly_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="€250.00"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Row 2: Interest Rate and Total Payback -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/interest_rate"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:alpha="0.7" />

                    <TextView
                        android:id="@+id/tv_interest_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3.5%"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total_repayment"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:alpha="0.7" />

                    <TextView
                        android:id="@+id/tv_total_repayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="€12,500.00"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Row 3: Total Interest and Due Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/interest_cost"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:alpha="0.7" />

                    <TextView
                        android:id="@+id/tv_total_interest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="€2,500.00"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/due_date"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:alpha="0.7" />

                    <TextView
                        android:id="@+id/tv_due_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15.07.2025"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="end">

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/edit"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:background="@drawable/button_background"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/delete"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:background="@drawable/danger_button_background" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 
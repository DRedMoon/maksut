<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#192E45"
    android:padding="0dp">

    <!-- “Tietojen vienti / Tuonti”-yläosa -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#294D73"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_back_data_import"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/import_export"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#192E45" />

    <!-- “Vie CSV”-nappi -->
    <Button
        android:id="@+id/btn_export_csv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/export_csv"
        android:backgroundTint="#5BC0DE"
        android:textColor="#FFFFFF" />

    <!-- “Tuo CSV”-nappi -->
    <Button
        android:id="@+id/btn_import_csv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/import_csv"
        android:backgroundTint="#5BC0DE"
        android:textColor="#FFFFFF" />
</LinearLayout>

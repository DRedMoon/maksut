<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#223A5F"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_payment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nimi"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_payment_due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eräpäivä"
                android:textColor="#B0C4DE"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_payment_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 €"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/iv_payment_status"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_radio_button_unchecked"
            app:tint="@android:color/white"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
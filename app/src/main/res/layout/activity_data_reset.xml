<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#192E45"
    android:padding="0dp">

    <!-- 1) Ylin “Tietojen nollaus”-palkki -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#294D73"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_back_data_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/data_reset"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#192E45" />

    <!-- Esim. varoitusteksti -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/warnings_data_reset"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- “Vahvista nollaus”-nappi -->
    <Button
        android:id="@+id/btn_confirm_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/confirm_reset"
        android:backgroundTint="#D9534F"
        android:textColor="#FFFFFF" />

    <!-- “Peruuta”-nappi -->
    <Button
        android:id="@+id/btn_cancel_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/cancel_reset"
        android:backgroundTint="#5BC0DE"
        android:textColor="#FFFFFF" />

</LinearLayout>

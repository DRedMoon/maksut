<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#192E45"
    android:padding="0dp">

    <!-- 1) “Yksityisyys & Turvallisuus”-yläpalkki -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#294D73"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_back_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/privacy_security"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Väli -->
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#192E45" />

    <!-- “Tietojen nollaus / Poista tallennetut” -->
    <TextView
        android:id="@+id/tv_data_reset"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#294D73"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:text="@string/data_reset"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#192E45" />

    <!-- “Pääsykoodin lukitus / Salaus” -->
    <TextView
        android:id="@+id/tv_access_code"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#294D73"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:text="@string/access_code_lock"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#192E45" />

    <!-- “Tietojen vienti / tuonti” -->
    <TextView
        android:id="@+id/tv_data_import_export"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#294D73"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:text="@string/import_export"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>

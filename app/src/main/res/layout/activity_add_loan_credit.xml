<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#192E45">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#294D73"
        app:title="Lisää laina/luotto"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back_white"
        app:navigationIconTint="@android:color/white"
        app:titleCentered="true"/>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Type Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tyyppi"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinner_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_background"
                android:popupBackground="#294D73"
                android:layout_marginBottom="24dp"
                android:spinnerMode="dropdown"
                android:theme="@style/SpinnerStyle"/>

            <!-- Basic Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#294D73"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perustiedot"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <!-- Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nimi"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Syötä nimi"
                        android:textColor="@android:color/white"
                        android:textColorHint="#80FFFFFF"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Original Amount -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alkuperäinen summa (€)"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/et_original_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0.00"
                        android:inputType="numberDecimal"
                        android:textColor="@android:color/white"
                        android:textColorHint="#80FFFFFF"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Current Balance -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nykyinen saldo (€)"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/et_current_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0.00"
                        android:inputType="numberDecimal"
                        android:textColor="@android:color/white"
                        android:textColorHint="#80FFFFFF"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Monthly Payment -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kuukausimaksu (€)"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/et_monthly_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0.00"
                        android:inputType="numberDecimal"
                        android:textColor="@android:color/white"
                        android:textColorHint="#80FFFFFF"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Months Left (MANDATORY) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kuukausia jäljellä *"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/et_months_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Syötä kuukausia"
                        android:inputType="number"
                        android:textColor="@android:color/white"
                        android:textColorHint="#80FFFFFF"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Due Date -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eräpäivä"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:id="@+id/ll_due_date_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/selector_background"
                        android:padding="12dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:id="@+id/tv_due_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Loan-specific fields -->
            <LinearLayout
                android:id="@+id/ll_loan_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#294D73"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lainan tiedot"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp"/>

                        <!-- Handling Fee -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hoitokulu (€)"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp"/>

                        <EditText
                            android:id="@+id/et_handling_fee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="0.00"
                            android:inputType="numberDecimal"
                            android:textColor="@android:color/white"
                            android:textColorHint="#80FFFFFF"
                            android:background="@drawable/edit_text_background"
                            android:padding="12dp"
                            android:layout_marginBottom="16dp"/>

                        <!-- Euribor Rate -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Euribor-korko (%)"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp"/>

                        <EditText
                            android:id="@+id/et_euribor_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="0.00"
                            android:inputType="numberDecimal"
                            android:textColor="@android:color/white"
                            android:textColorHint="#80FFFFFF"
                            android:background="@drawable/edit_text_background"
                            android:padding="12dp"
                            android:layout_marginBottom="16dp"/>

                        <!-- Personal Margin -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Henkilökohtainen marginaali (%)"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp"/>

                        <EditText
                            android:id="@+id/et_personal_margin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="0.00"
                            android:inputType="numberDecimal"
                            android:textColor="@android:color/white"
                            android:textColorHint="#80FFFFFF"
                            android:background="@drawable/edit_text_background"
                            android:padding="12dp"
                            android:layout_marginBottom="16dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Credit-specific fields -->
            <LinearLayout
                android:id="@+id/ll_credit_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#294D73"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Luoton tiedot"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp"/>

                        <!-- Credit-specific fields can be added here -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Luottoraja ja korkotiedot lasketaan automaattisesti"
                            android:textColor="#80FFFFFF"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Calculation Results Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#294D73"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laskennat"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kokonaissumma:"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tv_total_repayment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00 €"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kokonaiskorko:"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tv_total_interest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00 €"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Save Button -->
            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TALLENNA"
                android:textColor="@android:color/white"
                android:background="@drawable/button_background"
                android:padding="16dp"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#192E45">

    <!-- 1) Ylin “Hallitse maksuja” -palkki -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#192E45"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <!-- Vasemmalla “X” sulku -->
        <TextView
            android:id="@+id/tv_close_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Keskellä otsikko -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/manage_payments"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- 2) Erotusviiva tummalla taustavärillä -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#192E45"/>

    <!-- Alavalikot allekkain -->
    <TextView
        android:id="@+id/tv_loans"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#294D73"
        android:focusable="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:text="@string/loans"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:clickable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#192E45"/>

    <TextView
        android:id="@+id/tv_credits"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#294D73"
        android:focusable="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:text="@string/credits"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:clickable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#192E45"/>

    <TextView
        android:id="@+id/tv_subscriptions"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#294D73"
        android:focusable="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:text="@string/subscriptions"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:clickable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#192E45"/>

    <!-- Säiliö alasivuille (ei käytetä fragmentteja tässä mallissa) -->
    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>

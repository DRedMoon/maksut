<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#192E45">

    <!-- 1) Ylin “Hallitse maksuja” -palkki -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#192E45"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <!-- Vasemmalla “X” sulku -->
        <TextView
            android:id="@+id/tv_close_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Keskellä otsikko -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/manage_payments"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- pieni erotus -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#294D72" />

    <!-- 2) Alavalikot -->
    <LinearLayout
        android:id="@+id/ll_submenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#192E45"
        android:padding="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_loans"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/loans"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/brand_primary" />

        <Button
            android:id="@+id/btn_credits"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/credits"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/brand_primary"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btn_subscriptions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/subscriptions"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/brand_primary" />
    </LinearLayout>

    <!-- pieni erotus -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#294D72" />

    <!-- 3) (Tyhjä kohta, tässä voit näyttää esim. fragmentin tai listan) -->
    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>

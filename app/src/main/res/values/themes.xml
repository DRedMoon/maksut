<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Maksut" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryVariant">@color/brand_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorSecondaryVariant">@color/accent_blue</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar and navigation bar colors -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@color/brand_primary_dark</item>
        <!-- Text colors. -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- Edge-to-edge display -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:fitsSystemWindows">false</item>
        <!-- Custom popup menu style -->
        <item name="android:popupMenuStyle">@style/CustomPopupMenuStyle</item>
        <item name="android:popupBackground">@color/brand_primary</item>
    </style>

    <!-- Custom Popup Menu Style -->
    <style name="CustomPopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/brand_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:itemBackground">@color/brand_primary</item>
    </style>

    <!-- Custom spinner style for dark theme -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/brand_primary</item>
        <item name="android:colorControlNormal">@color/text_primary</item>
        <item name="android:colorControlActivated">@color/text_primary</item>
        <item name="android:colorControlHighlight">@color/text_primary</item>
        <item name="android:dropDownSelector">@color/brand_primary</item>
        <item name="android:colorAccent">@color/text_primary</item>
        <item name="android:colorPrimary">@color/text_primary</item>
        <item name="android:colorPrimaryDark">@color/text_primary</item>
    </style>

    <!-- DatePickerDialog Theme -->
    <style name="DatePickerDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryVariant">@color/brand_primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/brand_primary</item>
        <item name="colorSecondaryVariant">@color/brand_primary_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:colorBackground">@color/brand_primary_dark</item>
        <item name="colorSurface">@color/brand_primary</item>
        <item name="colorOnSurface">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

</resources>

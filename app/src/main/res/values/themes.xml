<resources>
    <style name="Theme.Maksut" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Pääväri (vaikuttaa toolbar‐väriin, jos toolbar on) -->
        <item name="colorPrimary">@color/brand_primary</item>
        <!-- Tummempi variantti, jota yleensä käytetään status‐barissa -->
        <item name="colorPrimaryDark">@color/brand_primary_dark</item>

        <!-- Jos haluat varmistaa, että status‐bar on samansävyinen: -->
        <item name="android:statusBarColor">@color/brand_primary_dark</item>
        <!-- Navigaatiopalkki (jos on näkyvissä): -->
        <item name="android:navigationBarColor">@color/brand_primary_dark</item>
    </style>
</resources>
